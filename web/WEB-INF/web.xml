<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">


    <display-name>GestionCourses</display-name>
    <welcome-file-list>
        <welcome-file>lists</welcome-file>
    </welcome-file-list>

    <!-- JSP -->
    <servlet>
        <servlet-name>Shopping_lists</servlet-name>
        <jsp-file>/WEB-INF/shopping_lists.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Shopping_lists</servlet-name>
        <url-pattern>/lists</url-pattern>
    </servlet-mapping>



</web-app>
